package-install 'git';

if target_os() ~~ m/alpine/ {
  package-install 'coreutils';
}


bash q:to/HERE/, %( description => 'get updates from  https://github.com/Bailador/Bailador.git');
  set -e;
  if test -d .git; then
    git pull
    git branch --verbose
  else
    git clone https://github.com/Bailador/Bailador.git . 
    git branch --verbose
  fi

HERE

zef 'Path::Iterator';
zef '.', %( depsonly => True );
zef 'TAP::Harness';

bash 'timeout 120 prove6 -l', %(
  debug => True,
  envvars => %(
    PATH => '/root/.rakudobrew/moar-nom/install/share/perl6/site/bin:$PATH'
  )
);

